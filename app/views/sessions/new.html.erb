<div class="container">

<h1>Sign In</h1>

<%#= form_tag sessions_path do %>
<%= form_tag(sessions_path, :method => :post, :class => "form-horizontal") do %>

  <div class="form-group row">
    <%= label_tag :email, nil, class: "col-md-2 control-label"  %>
    <div class="col-md-8">
    <%= email_field_tag :email, nil,  class: "form-control"  %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag :password, nil, class: "col-md-2 control-label"  %>
    <div class="col-md-8">
    <%= password_field_tag :password, nil,  class: "form-control"  %>
    </div>
    <br>
    <br>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= submit_tag "Sign In", class: "btn btn-primary col-md-offset-2"  %>
    </div>
  </div>
<% end %>

<div class="form-group row">
  <%= link_to "Forgot password? Click to reset", new_password_reset_path %>
</div>

</div>
